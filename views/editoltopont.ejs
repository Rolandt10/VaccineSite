<%- include('head') -%>
<%- include('navigation') -%>
<div class="container">
    <h2>Oltópont módosítása</h2>
    <form method="POST">
        <div class="form-group">
            <label>Cím:</label>
            <input class="form-control" placeholder="Adja meg az oltópont címét" value="<%= oltopont.cim %>" name="cim">
            <label>Telefonszám:</label>
            <input class="form-control" placeholder="Adja meg az oltópont telefonszámát" value="<%= oltopont.telefonszam %>" name="telefonszam">
            <label>Email:</label>
            <input class="form-control" placeholder="Adja meg az oltópont email címét" value="<%= oltopont.email %>" name="email">
            <label for="sel1">Hűtés:</label>
            <select class="form-control" name="hutes">
                <option value="true">VAN</option>
                <option value="false">NINCS</option>
            </select>
        </div>

        <button type="submit" class="btn btn__color">Módosítás</button>
        <button onclick="location.href='/vaccinationpoint'" type="button" class="btn btn__color">Vissza</button>
    </form>
</div>
<%- include('footer') -%>